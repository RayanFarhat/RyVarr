<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="40"
             x:Class="RyVarr.Views.NavBarView"
			 xmlns:vm="clr-namespace:RyVarr.ViewModels"
			 xmlns:c="clr-namespace:RyVarr.Views.TemplatedControls"
			 x:DataType="vm:MainViewModel">

	<UserControl.Styles>
			<StyleInclude Source="/Views/TemplatedControls/TextBtnControl.axaml"/>		
	</UserControl.Styles>
	
	<Grid ColumnDefinitions="Auto,*,Auto" Height="30">
		<c:TextBtnControl Command="{Binding UserBtnPressedCommand}" 
						  Grid.Column="0"
						  Text="User"/>
		<c:TextBtnControl Command="{Binding OpenMainPageCommand}"
					  VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1"
					  Text="RyVarr"/>
		<c:TextBtnControl Command="{Binding OpenProjectPageCommand}"
					  Grid.Column="2"
					  Text="Project Manager"/>
	</Grid>
</UserControl>
