<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:vm="clr-namespace:RyVarr.ViewModels"
		xmlns:c="clr-namespace:RyVarr.Views.TemplatedControls"
		xmlns:controls="using:RyVarr.Views.TemplatedControls"
		x:DataType="vm:MainViewModel"
		x:CompileBindings="False">
	<Design.PreviewWith>
		<controls:ErrorListControl />
	</Design.PreviewWith>

	<Style Selector="controls|ErrorListControl">
		<!-- Set Defaults -->
		<Setter Property="Template">
			<ControlTemplate>
				<!--Show list of all errors-->
				<ItemsControl
					 ItemsSource="{TemplateBinding ErrorMessages}">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<TextBlock TextWrapping="Wrap"
								HorizontalAlignment="Left"
								   Foreground="{DynamicResource red1}"
								Margin="10" Text="{Binding .}"/>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl >
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>
