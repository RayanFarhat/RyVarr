<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:vm="clr-namespace:RyVarr.ViewModels"
		xmlns:c="clr-namespace:RyVarr.Views.TemplatedControls"
        xmlns:controls="using:RyVarr.Views.TemplatedControls"
		x:DataType="vm:MainViewModel">
  <Design.PreviewWith>
    <controls:CopyableTextControl />
  </Design.PreviewWith>
	
  <Style Selector="controls|CopyableTextControl">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
		  <StackPanel Orientation="Horizontal">
			  <TextBlock Foreground="{DynamicResource green2}"
				  VerticalAlignment="Center" Text="{TemplateBinding Text}"/>
			  <c:IconBtnControl Src="/Assets/svg/copy.png" Size="30"
				  Command="{Binding CopyButton_OnClickCommand}"
				  CommandParameter="{TemplateBinding TextToCopy}"/>
		  </StackPanel>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
