<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:RyVarr.Views.TemplatedControls">
  <Design.PreviewWith>
	  <StackPanel Width="300" Height="100">
    <controls:TypewriteAnimationTextControl HorizontalAlignment="Left" />
	  </StackPanel>
  </Design.PreviewWith>
	<!-- text should be one line -->

	<Style Selector="controls|TypewriteAnimationTextControl">
	  <Style.Animations>
		  <Animation IterationCount="100" Duration="0:0:2" Easing="QuarticEaseInOut">
			  <KeyFrame Cue="0%">
				  <Setter Property="Width" Value="1"/>
			  </KeyFrame>
			  <KeyFrame Cue="100%">
				  <Setter Property="Width" Value="350"/>
			  </KeyFrame>
		  </Animation>
	  </Style.Animations>
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
        <Label HorizontalAlignment="Left" Foreground="{DynamicResource green1}"
			Content="{TemplateBinding Text}" />
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
